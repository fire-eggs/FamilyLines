<UserControl x:Class="KBS.FamilyLines.Controls.HeaderViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Properties="clr-namespace:KBS.FamilyLines.Properties"
             Width="400"
             Height="675"
             >
    
    <StackPanel>

        <Border Padding="5,0,5,0" Background="{DynamicResource BackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1,1,1,0" 
                CornerRadius="5,5,0,0" Height="30">
            
            <!--TODO Embedded string -->
            <TextBlock Padding="5,0,0,0" Text="View GEDCOM Header Data" 
                       TextWrapping="Wrap" Foreground="{DynamicResource HeaderFontColor}" 
                       FontSize="18" FontWeight="Bold" VerticalAlignment="Center" 
                       HorizontalAlignment="Left"/>
        </Border>

        <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1,1,1,1">
            <StackPanel Margin="0" 
                        Background="{DynamicResource InputBackgroundBrush}"
                        >

                <Grid >

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--TODO Embedded string -->
                    <Label Foreground="{DynamicResource InputFontColor}" 
                           Grid.Column="0"
                           Grid.Row="0"
                           Padding="0"
                           Margin="5,0,5,0"
                           Content="Submitter"/>
                    <TextBlock Foreground="{DynamicResource InputFontColor}" 
                               Grid.Row="0"
                               Grid.Column="1"
                               Text="{Binding Path=Submitter}"/>

                    <!--TODO Embedded string -->
                    <Label Foreground="{DynamicResource InputFontColor}" 
                               Grid.Row="1"
                               Grid.Column="0"
                           Padding="0"
                               Margin="5,0,5,0"
                           Content="Copyright"/>
                    <TextBlock Foreground="{DynamicResource InputFontColor}" 
                               Grid.Row="1"
                               Grid.Column="1"
                               Text="{Binding Path=Copyright}"/>

                    <!--TODO Embedded string -->
                    <Label Foreground="{DynamicResource InputFontColor}" 
                               Grid.Row="2"
                               Grid.Column="0"
                           Padding="0"
                               Margin="5,0,5,0"
                           Content="Date"/>
                    <TextBlock Foreground="{DynamicResource InputFontColor}" 
                               Grid.Row="2"
                               Grid.Column="1"
                               Text="{Binding Path=SubmitDate}"/>

                    <!--TODO Embedded string -->
                    <Label Foreground="{DynamicResource InputFontColor}" 
                               Grid.Row="3"
                               Grid.Column="0"
                           Padding="0"
                               Margin="5,0,5,0"
                           Content="Language"/>
                    <TextBlock Foreground="{DynamicResource InputFontColor}" 
                               Grid.Row="3"
                               Grid.Column="1"
                               Text="{Binding Path=HeadLanguage}"/>

                    <!--TODO Embedded string -->
                    <Label Foreground="{DynamicResource InputFontColor}" 
                               Grid.Row="4"
                               Grid.Column="0"
                               Padding="0"
                               Margin="5,0,5,0"
                           Content="Source"/>
                    <TextBlock Foreground="{DynamicResource InputFontColor}" 
                               Grid.Row="4"
                               Grid.Column="1"
                               Text="{Binding Path=Source}"/>

                    <!--TODO Embedded string -->
                    <Label Foreground="{DynamicResource InputFontColor}" 
                               Grid.Row="5"
                               Grid.Column="0"
                           Padding="0"
                               Margin="5,0,5,0"
                           Content="Application"/>
                    <TextBlock Foreground="{DynamicResource InputFontColor}" 
                               Grid.Row="5"
                               Grid.Column="1"
                               Text="{Binding Path=Application}"/>

                    <!--TODO Embedded string -->
                    <Label Foreground="{DynamicResource InputFontColor}" 
                               Grid.Row="6"
                               Grid.Column="0"
                           Padding="0"
                               Margin="5,0,5,0"
                           Content="Company"/>
                    <TextBlock Foreground="{DynamicResource InputFontColor}" 
                               Grid.Row="6"
                               Grid.Column="1"
                               Text="{Binding Path=Company}"/>

                    <Label Foreground="{DynamicResource InputFontColor}" 
                               Grid.Row="7"
                               Grid.Column="0"
                           Padding="0"
                               Margin="5,0,5,0"
                           Content="{Binding Path=SubmitCount}"/>
                </Grid>
                <!--TODO Embedded string -->
                <Button Content="Close" Click="Button_Click"/>

            </StackPanel>
            
        </Border>

        <!-- Footer -->
        <Grid>
            <Border Background="{DynamicResource BackgroundBrush}" Height="15" 
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1,0,1,1" 
                    CornerRadius="0,0,5,5"/>
        </Grid>
    </StackPanel>
</UserControl>
