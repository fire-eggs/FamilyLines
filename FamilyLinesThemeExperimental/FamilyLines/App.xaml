<Application x:Class="KBS.FamilyLines.App"
             x:ClassModifier="internal"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--The theme must be specified here to ensure all visual elements display in the designer-->
                <!-- Use the Silver skin by default -->
                <ResourceDictionary Source="Themes/Metro/MetroResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
